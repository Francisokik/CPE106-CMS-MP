<Window x:Class="MPGuiVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPGuiVersion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="Company Management System" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,122,0,0"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="254,284,0,0" VerticalAlignment="Top" Click="Login_Click" Width="120"/>
        <Button x:Name="SignupBtn" Content="Signup" HorizontalAlignment="Left" Margin="423,284,0,0" VerticalAlignment="Top" Click="Signup_Click" Width="120"/>
        <TextBox x:Name="EmailBox" HorizontalAlignment="Center" Margin="0,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Margin="0,217,0,0"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,180,0,0" Text="Email Address" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,235,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top"/>


    </Grid>
</Window>
